<%= form_with(model: movie) do |form| %>
  <% if movie.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(movie.errors.count, "error") %> prohibited this movie from being saved:</h2>

      <ul>
        <% movie.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row row-cols-auto align-items-center mb-3"> 
    <div class="col-6">
      <div class="input-group">
        <%= form.label :name, "Nombre", class: "input-group-text" %>
        <%= form.text_field :name, placeholder: "Nombre", class: "form-control" %>
      </div>
    </div>

    <div class="col-3">
      <div class="input-group">
        <%= form.label :client_id, "Cliente", class: "input-group-text", for:"selectCliente" %>
        <%= form.select :client_id, options_for_select(@clients), class: "form-select", id:"selectCliente" %>
      </div>
    </div>

    <div class="col-1 px-0" style="width: 35px">
      <%= link_to movies_path do %>
        <i class="bi bi-arrow-return-left text-secondary fs-5"></i>
      <% end %>
    </div>

    <div class="col-2 px-0">
      <% if action_name == "new" %>
        <%= form.submit "Guardar", class: "btn btn-success rounded-pill fw-semibold text-white" %>
      <% else %>
        <%= form.submit "Actualizar", class: "btn btn-success rounded-pill fw-semibold text-white" %>
      <% end %>
    </div>
  </div>
<% end %>
